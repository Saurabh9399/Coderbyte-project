{
  "compilerOptions": {
    "jsx": "preserve",
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "jsxImportSource": "react",
    "paths": {
      "@/*": ["./src/*"],
      "@frontend/*": ["./frontend/*"]
    }
  },
  "references": [{ "path": "./frontend" }, { "path": "./backend" }],
  "exclude": ["node_modules"]
}
